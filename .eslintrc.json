{
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "plugins": ["promise"],
  "rules": {
    "no-console": 0,
    "eqeqeq": 0,
    "no-eq-null": 0,
    "no-await-in-loop": 0,
    "no-undef": 0,
    "no-unused-vars": 1,
    "no-mixed-spaces-and-tabs": 0,
    "no-alert": 0,
    "no-loop-func": 0,
    "prefer-arrow-callback": 0,
    "promise/always-return": 1,
    "promise/catch-or-return": 1,
    "promise/no-nesting": 0
  }
}
